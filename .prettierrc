{
    "jsonRecursiveSort": true,
    "overrides": [
        {
            "files": "*.svelte",
            "options": {
                "parser": "svelte"
            }
        }
    ],
    "plugins": [
        "prettier-plugin-organize-imports",
        "prettier-plugin-svelte",
        "prettier-plugin-sort-json",
        "prettier-plugin-tailwindcss"
    ],
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "useTabs": false
}
